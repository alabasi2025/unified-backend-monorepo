#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# PHASE: 1
# COMPONENT: Husky Hooks  
# IMPACT: Quality Control

echo "ðŸ” Running pre-commit checks..."

# Check 1: Contracts Version Sync
echo "ðŸ“¦ Checking contracts version..."
./scripts/check-contracts-version.sh
if [ $? -ne 0 ]; then
  echo "âŒ Contracts version check failed!"
  exit 1
fi

# Check 2: No Local DTOs
echo "ðŸš« Checking for local DTOs..."
./scripts/verify-no-local-dtos.sh
if [ $? -ne 0 ]; then
  echo "âŒ Local DTOs detected!"
  exit 1
fi

# Check 3: Layer Architecture
echo "ðŸ—ï¸  Checking layer architecture..."
./scripts/verify-layer-architecture.sh
if [ $? -ne 0 ]; then
  echo "âŒ Layer architecture violation!"
  exit 1
fi

# Check 4: PHASE Comments
echo "ðŸ’¬ Checking PHASE comments..."
./scripts/check-phase-comments.sh
if [ $? -ne 0 ]; then
  echo "âŒ Missing PHASE comments!"
  exit 1
fi

# Check 5: DTO Quality Check (PHASE-14)
echo "ðŸ” Running DTO Quality Check..."
python3 .github/scripts/dto_quality_analyzer.py 2>/dev/null
if [ $? -eq 0 ]; then
  COMPLIANCE_RATE=$(python3 -c "import json; data=json.load(open('dto_analysis_report.json')); print(data['summary']['compliance_rate'])" 2>/dev/null)
  if [ ! -z "$COMPLIANCE_RATE" ]; then
    echo "  Compliance Rate: $COMPLIANCE_RATE%"
  fi
fi

echo "âœ… All pre-commit checks passed!"
