import { Controller, Get, Post, Put, Delete, Param, Body, Query } from '@nestjs/common';
import { NotebooksService } from './notebooks.service';
// يجب تعريف DTOs في ملفات منفصلة، لكن سنستخدم أي نوع مؤقتًا لغرض هذا المثال
// import { CreateNotebookDto, UpdateNotebookDto } from './dto/notebooks.dto';

@Controller('notebooks')
export class NotebooksController {
  constructor(private readonly notebooksService: NotebooksService) {}

  // POST /notebooks
  @Post()
  create(@Body() createNotebookDto: any) {
    // يجب استبدال 'any' بـ CreateNotebookDto
    return this.notebooksService.create(createNotebookDto);
  }

  // GET /notebooks
  @Get()
  findAll(@Query() query: any) {
    return this.notebooksService.findAll(query);
  }

  // GET /notebooks/:id
  @Get(':id')
  findOne(@Param('id') id: string) {
    return this.notebooksService.findOne(id);
  }

  // PUT /notebooks/:id
  @Put(':id')
  update(@Param('id') id: string, @Body() updateNotebookDto: any) {
    // يجب استبدال 'any' بـ UpdateNotebookDto
    return this.notebooksService.update(id, updateNotebookDto);
  }

  // DELETE /notebooks/:id
  @Delete(':id')
  remove(@Param('id') id: string) {
    return this.notebooksService.remove(id);
  }

  // POST /notebooks/:id/pin
  @Post(':id/pin')
  pin(@Param('id') id: string) {
    return this.notebooksService.pin(id);
  }

  // POST /notebooks/:id/favorite
  @Post(':id/favorite')
  favorite(@Param('id') id: string) {
    return this.notebooksService.favorite(id);
  }

  // POST /notebooks/:id/archive
  @Post(':id/archive')
  archive(@Param('id') id: string) {
    return this.notebooksService.archive(id);
  }
}
