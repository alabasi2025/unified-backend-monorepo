import { Controller, Get, Post, Put, Delete, Param, Body, Query } from '@nestjs/common';
import { SectionsService } from './sections.service';
// افتراض وجود DTOs
// import { CreateSectionDto, UpdateSectionDto, ReorderSectionsDto } from './dto/sections.dto';

@Controller('sections')
export class SectionsController {
  constructor(private readonly sectionsService: SectionsService) {}

  // 1. POST /notebooks/:id/sections
  // نستخدم المسار الأساسي 'sections' ونضيف ':notebookId/sections' في @Post
  @Post(':notebookId/sections')
  create(
    @Param('notebookId') notebookId: string,
    @Body() createSectionDto: any // يجب استبدالها بـ CreateSectionDto
  ) {
    console.log(`Creating section for notebook ID: ${notebookId}`);
    return this.sectionsService.create(notebookId, createSectionDto);
  }

  // 2. GET /notebooks/:id/sections
  // نستخدم المسار الأساسي 'sections' ونضيف ':notebookId/sections' في @Get
  @Get(':notebookId/sections')
  findAllByNotebook(
    @Param('notebookId') notebookId: string,
    @Query() query: any
  ) {
    console.log(`Finding all sections for notebook ID: ${notebookId}`);
    return this.sectionsService.findAllByNotebook(notebookId, query);
  }

  // 3. GET /sections/:id
  // نستخدم المسار الأساسي 'sections' ونضيف ':id' في @Get
  @Get(':id')
  findOne(@Param('id') id: string) {
    console.log(`Finding section with ID: ${id}`);
    return this.sectionsService.findOne(id);
  }

  // 4. PUT /sections/:id
  // نستخدم المسار الأساسي 'sections' ونضيف ':id' في @Put
  @Put(':id')
  update(
    @Param('id') id: string,
    @Body() updateSectionDto: any // يجب استبدالها بـ UpdateSectionDto
  ) {
    console.log(`Updating section with ID: ${id}`);
    return this.sectionsService.update(id, updateSectionDto);
  }

  // 5. DELETE /sections/:id
  // نستخدم المسار الأساسي 'sections' ونضيف ':id' في @Delete
  @Delete(':id')
  remove(@Param('id') id: string) {
    console.log(`Deleting section with ID: ${id}`);
    return this.sectionsService.remove(id);
  }

  // 6. PUT /sections/:id/reorder
  // نستخدم المسار الأساسي 'sections' ونضيف ':id/reorder' في @Put
  @Put(':id/reorder')
  reorder(
    @Param('id') id: string,
    @Body() reorderSectionsDto: any // يجب استبدالها بـ ReorderSectionsDto
  ) {
    console.log(`Reordering section with ID: ${id}`);
    // في الواقع، قد تحتاج عملية إعادة الترتيب إلى معالجة مختلفة،
    // لكننا نلتزم بتعريف الـ endpoint كما هو مطلوب.
    return this.sectionsService.reorder(id, reorderSectionsDto);
  }
}
