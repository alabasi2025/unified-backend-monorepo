import { Controller, Get, Post, Put, Delete, Param, Body, Query } from '@nestjs/common';
import { StickyNotesService } from './sticky-notes.service'; // افتراض وجود خدمة
import { CreateStickyNoteDto, UpdateStickyNoteDto, UpdatePositionDto } from './dto/sticky-notes.dto'; // افتراض وجود DTOs

@Controller('pages/:pageId/sticky-notes')
export class StickyNotesController {
  constructor(private readonly stickyNotesService: StickyNotesService) {}

  // POST /pages/:pageId/sticky-notes
  @Post()
  create(
    @Param('pageId') pageId: string,
    @Body() createDto: CreateStickyNoteDto,
  ) {
    // منطق إنشاء ملاحظة جديدة لصفحة معينة
    return this.stickyNotesService.create(pageId, createDto);
  }

  // GET /pages/:pageId/sticky-notes
  @Get()
  findAll(
    @Param('pageId') pageId: string,
    @Query() query: any,
  ) {
    // منطق جلب جميع الملاحظات لصفحة معينة
    return this.stickyNotesService.findAll(pageId, query);
  }

  // GET /sticky-notes/:id
  @Get('/sticky-notes/:id')
  findOne(@Param('id') id: string) {
    // منطق جلب ملاحظة محددة
    return this.stickyNotesService.findOne(id);
  }

  // PUT /sticky-notes/:id
  @Put('/sticky-notes/:id')
  update(
    @Param('id') id: string,
    @Body() updateDto: UpdateStickyNoteDto,
  ) {
    // منطق تحديث ملاحظة محددة
    return this.stickyNotesService.update(id, updateDto);
  }

  // DELETE /sticky-notes/:id
  @Delete('/sticky-notes/:id')
  remove(@Param('id') id: string) {
    // منطق حذف ملاحظة محددة
    return this.stickyNotesService.remove(id);
  }

  // PUT /sticky-notes/:id/position
  @Put('/sticky-notes/:id/position')
  updatePosition(
    @Param('id') id: string,
    @Body() updatePositionDto: UpdatePositionDto,
  ) {
    // منطق تحديث موقع الملاحظة
    return this.stickyNotesService.updatePosition(id, updatePositionDto);
  }
}
